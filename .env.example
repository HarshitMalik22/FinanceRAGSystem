# ===== Backend Configuration =====

# Flask Configuration
FLASK_ENV=development
FLASK_APP=finance_rag_app.py
PORT=8080

# LLM Provider (google or groq)
LLM_PROVIDER=google

# Google Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro
GOOGLE_EMBEDDING_MODEL=models/embedding-001

# Groq Configuration (if using Groq)
# GROQ_API_KEY=your_groq_api_key_here
# GROQ_MODEL=llama-3.3-70b-versatile

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Vector Store Configuration
VECTOR_STORE_DIR=./data/chroma_db
VECTOR_STORE_COLLECTION=financial_documents

# Application Settings
TEMPERATURE=0.1
LOG_LEVEL=INFO
MAX_TOKENS=1000
TOP_K_RETRIEVAL=6

# Performance Settings
MAX_WORKERS=4

# Caching
ENABLE_CACHING=true
CACHE_DIR=./data/document_cache

# File Uploads
UPLOAD_FOLDER=./data/uploads
MAX_CONTENT_LENGTH=50MB

# Database
DATABASE_URL=sqlite:///data/finance_rag.db

# Security
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===== Frontend Configuration =====

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8080

# Optional: Google Analytics
# REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Optional: Sentry for Error Tracking
# REACT_APP_SENTRY_DSN=your-sentry-dsn-here

# Optional: Feature Flags
# REACT_APP_FEATURE_CHAT=true
# REACT_APP_FEATURE_UPLOAD=true
