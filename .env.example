# Required API Keys
GROQ_API_KEY=your_groq_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# ChromaDB Configuration
VECTOR_STORE_DIR=./chroma_db
VECTOR_STORE_COLLECTION=financial_documents

# ChromaDB Server Configuration (for production)
# Uncomment and configure these for production deployment
# CHROMA_SERVER_HOST=your-chromadb-service-url
# CHROMA_SERVER_PORT=8000
# CHROMA_SERVER_SSL=false
# CHROMA_SERVER_AUTH_CREDENTIALS=username:password

# Application Settings
FLASK_ENV=development
FLASK_DEBUG=1
PORT=5000

# Optional: Logging
LOG_LEVEL=INFO

# Disable ChromaDB telemetry
CHROMA_TELEMETRY_DISABLED=true
